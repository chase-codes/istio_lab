{
  "name": "istio-lab-app",
  "version": "1.0.0",
  "description": "Istio PM Mastery Learning Environment",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"webpack --mode development --watch\" \"wait-on dist/index.html && electron .\"",
    "build": "webpack --mode production",
    "package": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never",
    "rebuild": "electron-rebuild -f -w node-pty",
    "postinstall": "electron-rebuild -f -w node-pty"
  },
  "keywords": [
    "istio",
    "kubernetes",
    "service-mesh",
    "learning",
    "education"
  ],
  "author": "Istio Lab Team",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "@babel/preset-react": "^7.23.3",
    "@electron/rebuild": "^4.0.1",
    "babel-loader": "^9.1.1",
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "electron": "^27.1.3",
    "electron-builder": "^24.6.4",
    "electron-rebuild": "^3.2.9",
    "html-webpack-plugin": "^5.5.3",
    "style-loader": "^3.3.3",
    "wait-on": "^7.0.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-search": "^0.15.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/addon-webgl": "^0.18.0",
    "@xterm/addon-ligatures": "^0.8.0",
    "@xterm/xterm": "^5.5.0",
    "dompurify": "^3.0.9",
    "highlight.js": "^11.9.0",
    "marked": "^9.1.2",
    "node-pty": "^1.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
